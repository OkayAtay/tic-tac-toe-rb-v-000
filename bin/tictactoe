#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

def play(board)
  turn(board)
  if over?(board)
    puts "Congratulations winner #{winner(board)}"
  else
    turn(board)
  end
end

puts "Welcome to Tic Tac Toe!"
display_board(board)
play(board)
